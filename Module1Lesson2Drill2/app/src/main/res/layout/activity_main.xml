<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:stretchColumns="*"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TableRow
        android:layout_weight="1">
        <TextView
            android:layout_height="80dp"
            android:layout_span="4"
            android:background="@color/white"
            android:textSize="40sp"
            android:id="@+id/screen_tv"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            style="@style/number_btn_style"
            android:text="1"
            android:id="@+id/btn_1"
            tools:ignore="HardcodedText" />

        <Button
            style="@style/number_btn_style"
            android:text="2"
            android:id="@+id/btn_2"
            tools:ignore="HardcodedText" />
        <Button
            style="@style/number_btn_style"
            android:text="3"
            android:id="@+id/btn_3"
            tools:ignore="HardcodedText" />
        <Button
            style="@style/action_btn_style"
            android:text="+"
            android:id="@+id/btn_plus"
            tools:ignore="HardcodedText" />

    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            style="@style/number_btn_style"
            android:text="4"
            android:id="@+id/btn_4"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/number_btn_style"
            android:text="5"
            android:id="@+id/btn_5"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/number_btn_style"
            android:text="6"
            android:id="@+id/btn_6"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/action_btn_style"
            android:text="-"
            android:id="@+id/btn_minus"
            tools:ignore="HardcodedText"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            style="@style/number_btn_style"
            android:text="7"
            android:id="@+id/btn_7"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/number_btn_style"
            android:text="8"
            android:id="@+id/btn_8"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/number_btn_style"
            android:text="9"
            android:id="@+id/btn_9"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/action_btn_style"
            android:text="X"
            android:id="@+id/btn_duplicate"
            tools:ignore="HardcodedText"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            style="@style/number_btn_style"
            android:backgroundTint="@color/red"
            android:text="C"
            android:id="@+id/btn_clear"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/number_btn_style"
            android:text="0"
            android:id="@+id/btn_0"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/action_btn_style"
            android:text="="
            android:id="@+id/btn_equal"
            tools:ignore="HardcodedText"/>
        <Button
            style="@style/action_btn_style"
            android:text="/"
            android:id="@+id/btn_divide"
            tools:ignore="HardcodedText"/>
    </TableRow>
</TableLayout>